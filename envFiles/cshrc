#!/usr/bin/tcsh


alias gitka     'gitk --all'
###########################################################################################################
# tab features
###########################################################################################################
set filec
set autolist

###########################################################################################################
# functions
###########################################################################################################

## prompt feature
#alias _prompt 'set prompt="%U%T%u:`whoami`:%B$cwd%b: > "'
set prompt="%U%T%u:`whoami`:%B%~%b > "
#i-search-back bound like on bash (Ctrl+R)
bindkey "^R" i-search-back


alias cd.. 		'cd ..'
alias u         'cd ..'
alias .. 		'cd ..'
alias rm 		'rm -r'
alias cp 		'cp -r'
alias mkdir     'mkdir -p'

alias mv 		'mv -i'
alias grep      'grep --color=auto'

# only for linux
alias dir       'dir --color'
alias ls        'ls --color=auto'
alias ls        'ls -h'
alias la        'ls -a'
alias lt        'ls -lrt'
alias ll 		'ls -l'


###########################################################################################################
# Custom commands
###########################################################################################################
## Find in environment feature.
### Find a string in environment files use by a job.

alias sourceMe  'source ~/.cshrc'

alias echoGitDiff   'echo "cd `echo $PWD` && git difftool -y && cd -"'

set nobeep

#vim like aliases
# alias g 'mvim'
# alias s 'subl'
alias r 'refresh'
alias q 'exit'
alias e 'exit'
alias E 'exit'
alias hg 'history | grep \!*'
alias lg 'ls -1 | grep -i \!*'
alias cg 'cd `ls | grep -i \!*`'
alias go 'wg; cg'
alias eg 'env | grep -i \!*'
alias sm 'sourceMe'
#alias cacheclear 'app/console cache:clear'

#alias sshLeest 'ssh leestbot@ssh.alwaysdata.com'
#alias sshftc 'ssh foutoucour@ssh.alwaysdata.com'
#alias sshkender 'ssh kender@web411.webfaction.com'
#alias errorLog 'tail -n 50 ~/admin/log/error.log'


#alias pipExtp 'pip install --install-option="--prefix=~/scripting/extp/" \!*'

#alias v.foutoucour 'source ~/envs/foutoucour/bin/activate.csh; cd ~/dev/foutoucour'
#alias v.kenderland 'source ~/envs/kenderland/bin/activate.csh; cd ~/dev/kenderland'
#alias v.tweepy 'source ~/envs/tweepy/bin/activate.csh; cd ~/dev/tweepy'
#alias v.dogallowed 'source ~/envs/dogallowed/bin/activate.csh; cd ~/dev/dogallowed'

#alias pylint 'pylint -f colorized'
#alias ipython 'python -m IPython'
#alias dj 'python manage.py'
#alias dshell 'dj shell -i ipython'
#alias spp 'dj shell_plus'
#alias rpp 'dj runserver_plus'

if ( -e ~/.local_env ) then
    echo "Sourcing Local Environment"
    source ~/.local_env
endif

if ( -e ~/.git-completion.tcsh) then
    echo "Sourcing git completion script"
    source ~/.git-completion.tcsh
    set autolist=ambiguous # adviced in the how to use
endif

if ( -e ~/.dev_env ) then
    echo "Sourcing development_environment"
    source ~/.dev_env
endif

alias ls        'ls --color=auto'

