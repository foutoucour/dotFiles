#!/usr/bin/tcsh


alias gitka     'gitk --all'
###########################################################################################################
# tab features
###########################################################################################################
set filec
set autolist

###########################################################################################################
# functions
###########################################################################################################

## prompt feature
#alias _prompt 'set prompt="%U%T%u:`whoami`:%B$cwd%b: > "'
set prompt="%U%T%u:`whoami`:%B%~%b > "
#i-search-back bound like on bash (Ctrl+R)
bindkey "^R" i-search-back


alias cd.. 		'cd ..'
alias u         'cd ..'
alias .. 		'cd ..'
alias rm 		'rm -r'
alias cp 		'cp -r'
alias mkdir     'mkdir -p'

alias mv 		'mv -i'
alias grep      'grep --color=auto'

# only for linux
alias ls        'ls -h'
alias la        'ls -a'
alias lt        'ls -lrt'
alias ll 		'ls -l'


###########################################################################################################
# Custom commands
###########################################################################################################
## Find in environment feature.
### Find a string in environment files use by a job.

alias sourceMe  'source ~/.cshrc'

set nobeep

#vim like aliases
alias r 'refresh'
alias e 'exit'
alias E 'exit'
alias hg 'history | grep \!*'
alias lg 'ls -1 | grep -i \!*'
alias cg 'cd `ls | grep -i \!*`'
alias eg 'env | grep -i \!*'
alias sm 'sourceMe'

if ( -e ~/.local_env ) then
    echo "Sourcing Local Environment"
    source ~/.local_env
endif

if ( -e ~/.git-completion.tcsh) then
    echo "Sourcing git completion script"
    source ~/.git-completion.tcsh
    set autolist=ambiguous # adviced in the how to use
endif

if ( -e ~/.dev_env ) then
    echo "Sourcing development_environment"
    source ~/.dev_env
endif



