# -*- coding: utf-8 -*-
import lm__Namer # Application to set the name of a selection
from PyQt4 import QtGui
from PyQt4 import QtCore

class Control(QtGui.QWidget):
    """controlor of the GlobalOptions Application"""
    def __init__(self, oGui, oModel):
        """
        Setting of the link with Gui and the model
        GuiObserver is the handler of the Gui for the controlor 
        @type oGui: object
        @param oGui: Interface part of this GlobalOptions Application
        @type oModel: object
        @param oModel: Logic part of the GlobalOptions Application
        """
        self.__oModel = oModel
        self.__oGui = oGui
        self.__oGui.setObserver(GuiObserver(self)) 
            
    def pointLightButton_onClicked(self):
        """Control of the pointLight PushButton""" 
        self.__setReferenceName('point Light')
    
    def spotLightButton_onClicked(self):
