        print 'CTRL Remove'
    
    def duplButton_onClicked(self):
        """Control of the duplicate PushButton"""
        print 'CTRL Duplicate'
    
    def instButton_onClicked(self):
        """Control of the instance PushButton"""
        print 'CTRL Instance'
           
    def __getReferenceName(self):
        """
        call when the lm__Namer.Naming() instance
        emit the QT.signa 'Naming_nameSet'
        @rtype: string
        @return: name set by the user
        """
        print self.__oNamer.getValue()
                
    def __setReferenceName(self,string):
        """
        Call of an instance of lm__Namer.Naming Class.
        It allows to set a name to the reference.
        @type string: string
        @param string: current name of the reference
        """           
        self.__oNamer = lm__Namer.Naming(string)
        self.__oNamer.show()
        self.connect(self.__oNamer,
                     QtCore.SIGNAL('Naming_nameSet'),
                     self.__getReferenceName)    
  
